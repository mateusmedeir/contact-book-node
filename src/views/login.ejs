<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Create account or Log-in</h1>
            <p class="text-center lead">Log-in or create an account below.</p>

            <%- include('includes/messages'); %>

            <div class="row">

                <div class="col-lg">
                    <h4>Register</h4>
                    <p>If you don't have an account, fill out the form below:</p>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Create account</button>
                    </form>
                </div>
                
                <div class="col-lg">
                    <h4>Log-in</h4>
                    <p>If you already have an account, log-in below:</p>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Enter</button>
                      </form>
                    
                </div>

            </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>